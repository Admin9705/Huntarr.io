{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "src",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "paths": {
          "App": ["App/*"],
          "Components": ["Components/*"],
          "Content": ["Content/*"],
          "FirstRun": ["FirstRun/*"],
          "Helpers": ["Helpers/*"],
          "Language": ["Language/*"],
          "Media": ["Media/*"],
          "Store": ["Store/*"],
          "Styles": ["Styles/*"],
          "typings": ["typings/*"],
          "Utilities": ["Utilities/*"],
      },
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "./src/**/*",  // Include source files for both app and node
    "vite.config.ts",  // Include vite config for bundler logic
    "./typings/*.ts",
    "./build/webpack.config.js",
  ]
}
